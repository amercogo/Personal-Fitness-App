<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.amercogo.fitnessapp.ui.controllers.RegisterController"
      spacing="12">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <Label text="Register" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="you@email.com" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Create account" onAction="#onRegister"/>
        <Button text="Back" onAction="#onBack"/>
        <Label fx:id="statusLabel"/>
    </HBox>

</VBox>
