<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.amercogo.fitnessapp.ui.controllers.WorkoutFormController"
      spacing="12">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Add Workout" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="e.g. Push" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="datePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Duration (min):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Spinner fx:id="durationSpinner" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
        <Label fx:id="statusLabel"/>
    </HBox>

</VBox>
